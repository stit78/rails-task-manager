<h1> Edit Task </h1>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <%= f.check_box :completed %><%= f.label ' Completed' %>

  <!-- <input type="checkbox" name="completed" value="completed"> <span>Completed</span> -->

  <br><br>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to list', tasks_path %>
