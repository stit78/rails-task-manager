<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task|  %>
    <span><input type="checkbox" <%= 'checked' if task.completed %> disabled="true">
    <%= link_to task.title, task_path(task) %></span>
    <span>
    <%= link_to "<i class=\"fal fa-trash-alt\"></i>".html_safe, task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></span>
<!--  -->
    <br>
  <% end %>
</ul>

<%= link_to '+ Add a new task', new_task_path %>
